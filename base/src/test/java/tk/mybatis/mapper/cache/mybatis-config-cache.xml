<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
    <settings>
        <setting name="cacheEnabled" value="true"/>
        <setting name="logImpl" value="LOG4J"/>
    </settings>

    <typeHandlers>
        <typeHandler handler="org.apache.ibatis.type.EnumOrdinalTypeHandler" javaType="tk.mybatis.mapper.typehandler.StateEnum"/>
    </typeHandlers>

    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC">
            </transactionManager>
            <dataSource type="UNPOOLED">
                <property name="driver" value="org.hsqldb.jdbcDriver" />
                <property name="url" value="jdbc:hsqldb:mem:typehandler" />
                <property name="username" value="sa" />
            </dataSource>
        </environment>
    </environments>

    <mappers>
        <mapper class="tk.mybatis.mapper.base.CountryMapper"/>
        <mapper class="tk.mybatis.mapper.cache.CountryCacheMapper"/>
        <mapper class="tk.mybatis.mapper.cache.CountryCacheRefMapper"/>
        <!--TODO 下面这种配置用法有 BUG，已提交给 MyBatis-->
        <!--<mapper class="tk.mybatis.mapper.cache.CountryCacheWithXmlMapper"/>-->
    </mappers>

</configuration>
